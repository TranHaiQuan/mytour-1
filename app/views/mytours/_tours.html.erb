<div class="col-sm-12 padrow">
  <% @toptours.each do |top| %>
    <div class="col-xs-12 col-sm-4">
      <div class="product-item">
        <div class="pi-img-wrapper">
          <%= image_tag top.image, width: "380", height: "230" %>
          <div>
            <%= link_to mytour_path(id: top.id),
              class: "btn btn-default1 detailbtn" do %>
                <%= t ".detail" %>
                <span class="glyphicon glyphicon-chevron-right"></span>
            <% end %>
          </div>
        </div>
        <div class="row">
          <h4 class="name-tour">
            <%= link_to top.tour_name, mytour_path(id: top.id) %>
          </h4>
        </div>
        <div class="row">
          <div class="col-md-6">
        <div class="showdes">
          <h1>
            <span class="glyphicon glyphicon-map-marker"></span>
            <b><%= top.destination %></b>
          </h1>
          </div>
        </div>
        <div class="col-md-6">
          <h1><span class="glyphicon glyphicon-time"></span>
          <%= top.number_day %><%= t ".day" %>
          <%= top.number_night %><%= t ".night" %></h1>
        </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="pi-price">
              <%= number_to_vnd(top.price) %><%= t ".vnd" %>
            </div>
          </div>
          <div class="col-md-6">
            <%= image_tag "https://i.imgur.com/nWlIWae.png", class: "starrate" %>
            <%= top.avg.round 2 %><%= t ".point" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row textsearch">
    <div class="col-md-2"></div>
    <div id="filter" class="col-md-8">
      <%= render "filter" %>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-8">
    <div id="pagination" class="pagechange">
      <%= paginate @tours, remote: true %>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>
<div class="row">
  <div class="col-md-5"></div>
  <div id="counter" class="col-md-3 pageinfo">
    <%= page_entries_info @tours %>
  </div>
  <div class="col-md-4"></div>
</div>
<div class="col-sm-12">
  <% @tours.each do |tour| %>
    <div class="col-xs-12 col-sm-4">
      <div class="product-item">
        <div class="pi-img-wrapper">
          <%= image_tag tour.image, width: "380", height: "230" %>
          <div>
            <%= link_to mytour_path(id: tour.id),
              class: "btn btn-default1 detailbtn" do %>
                <%= t ".detail" %>
                <span class="glyphicon glyphicon-chevron-right"></span>
            <% end %>
          </div>
        </div>
        <div class="row">
          <h4 class="name-tour"><%= link_to tour.tour_name,
            mytour_path(id: tour.id)%></h4>
        </div>
        <div class="row">
          <div class="col-md-6">
        <div class="showdes">
          <h1>
            <span class="glyphicon glyphicon-map-marker"></span>
            <b><%= tour.destination %></b>
          </h1>
          </div>
        </div>
        <div class="col-md-6">
          <h1><span class="glyphicon glyphicon-time"></span>
          <%= tour.number_day %><%= t ".day" %>
          <%= tour.number_night %><%= t ".night" %></h1>
        </div>
        </div>
        <div class="pi-price">
          <%= number_to_vnd(tour.price) %><%= t ".vnd" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
