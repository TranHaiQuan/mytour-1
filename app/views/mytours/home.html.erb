<!DOCTYPE HTML>
<html>
<body class="homepage">
  <div class="container-fluid">
    <%= render "layouts/header" %>
  </div>
  <div class="slided">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= link_to image_tag("bg1.jpg", alt: t(".bg1")), "#" %>
        </div>
        <div class="item">
          <%= link_to image_tag("bg2.jpg", alt: t(".bg2")), "#" %>
        </div>
        <div class="item">
          <%= link_to image_tag("bg3.jpg", alt: t(".bg3")), "#" %>
        </div>
        <div class="item">
          <%= link_to image_tag("bg4.jpg", alt: t(".bg4")), "#" %>
        </div>
      </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only"><%= t ".pre" %></span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only"><%= t ".next" %></span>
      </a>
    </div>
  </div>

  <div class="borsearch">
    <i class="colorsearch"><%= t ".search" %></i>
    <form action="#">
      <div class="input-group" id="searchresize">
        <input type="text" class="form-control" placeholder="City name..." name="search">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i><%= t ".btsearch" %>
          </button>
        </div>
      </div>
    </form>
  </div>

  <div class="divnull"></div>
  <div id="list" class="listtour">
    <figure class="snip1325">
      <%= link_to image_tag("img1.png", alt: t(".bg1")), "#" %>
    </figure>
    <figure class="snip25">
      <%= link_to image_tag("img2.jpg", alt: t(".bg2")), "#" %>
    </figure>
    <div class="neon"><%= t ".farvorite" %></div>
      <div class="info">
        <%= t ".info_a" %>
        <br>
        <%= t ".info_b" %>
        <br>
        <%= t ".info_c" %>
        <br>
        <%= t ".info_d" %>
    </div>
    <div class="container-fluid">
      <div class="row">
          <button class="btn-change"><%= t ".listtour" %></button>
      </div>
    </div>
  </div>
  <div>
     <figure class="snip132">
      <%= link_to image_tag("img3.jpg", alt: t(".bg3")), "#" %>
    </figure>
    <figure class="snip13">
      <%= link_to image_tag("img4.jpg", alt: t(".bg4")), "#" %>
    </figure>
  </div>

  <div class="divnull"></div>
  <div id="booked" class="booking">
    <div class="neon1"><%= t ".booktour" %></div>
    <div class="info1">
      <%= t ".info_e" %>
      <br>
      <%= t ".info_f" %>
    </div>
    <div class="neon2"><%= t ".office" %></div>
    <div class="info2">
      <%= t ".info_h" %>
      <br>
      <%= t ".info_i" %>
    </div>
    <button class="btn-change1">
      <b><%= t ".bktour" %></b>
    </button>
  </div>
  <div class="container-fluid">
    <div id="cf">
      <%= link_to image_tag("img5.jpg", alt: t(".bg4"), class: "bottom"), "#" %>
      <%= link_to image_tag("img6.jpg", alt: t(".bg4"), class: "top"), "#" %>
    </div>
  </div>
  <%= render "layouts/footer" %>
</body>
</html>
