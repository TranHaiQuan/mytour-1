<!DOCTYPE HTML>
<html>
<body class="homepage">
  <div class="row">
    <div class="col-md-12">
      <div class="slided">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <%= link_to image_tag("bg1.jpg", alt: t(".bg1")), "#" %>
            </div>
            <div class="item">
              <%= link_to image_tag("bg2.jpg", alt: t(".bg2")), "#" %>
            </div>
            <div class="item">
              <%= link_to image_tag("bg3.jpg", alt: t(".bg3")), "#" %>
            </div>
            <div class="item">
              <%= link_to image_tag("bg4.jpg", alt: t(".bg4")), "#" %>
            </div>
          </div>
          <!-- Left and right controls -->
          <%= link_to "#myCarousel", class: "left carousel-control",
            "data-slide": :prev do %>
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true">
              </span>
              <span class="sr-only"><%= t ".pre" %></span>
          <% end %>
          <%= link_to "#myCarousel", class: "right carousel-control",
            "data-slide": :next do %>
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true">
              </span>
              <span class="sr-only"><%= t ".next" %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="borsearch">
        <i class="colorsearch"><%= t ".search" %></i>
        <form action="#">
          <div class="input-group" id="searchresize">
            <input type="text" class="form-control" placeholder="City name..." name="search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i><%= t ".btsearch" %>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="divnull"></div>
    </div>
  </div>
  <div id="list" class="listtour">
    <div class="row">
      <div class="includeimg">
        <div class="col-md-3">
          <figure class="snip1325">
            <%= link_to image_tag("img1.png", alt: t(".bg1")), "#" %>
          </figure>
          <figure class="snip1325">
            <%= link_to image_tag("img3.jpg", alt: t(".bg3")), "#" %>
          </figure>
        </div>
        <div class="col-md-3">
          <figure class="snip1325">
            <%= link_to image_tag("img2.jpg", alt: t(".bg2")), "#" %>
          </figure>
          <figure class="snip1325">
            <%= link_to image_tag("img4.jpg", alt: t(".bg4")), "#" %>
          </figure>
        </div>
        <div class="col-md-6">
          <div class="neon"><%= t ".farvorite" %></div>
          <div class="info">
            <%= t ".info_a" %>
            <br>
            <%= t ".info_b" %>
            <br>
            <%= t ".info_c" %>
            <br>
            <%= t ".info_d" %>
          </div>
          <button class="btn-change"><%= t ".listtour" %></button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="divnull"></div>
    </div>
  </div>

  <div id="booked" class="booking">
    <div class="row">
      <div class="col-md-6">
        <div class="neon1"><%= t ".booktour" %></div>
        <div class="info1">
          <%= t ".info_e" %>
          <br>
          <%= t ".info_f" %>
        </div>
        <button class="btn-change1">
          <b><%= t ".bktour" %></b>
        </button>
      </div>
      <div class="col-md-6">
        <div id="cf">
          <%= link_to image_tag("img5.jpg", alt: t(".bg4"), class: "bottom"), "#" %>
          <%= link_to image_tag("img6.jpg", alt: t(".bg4"), class: "top"), "#" %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
