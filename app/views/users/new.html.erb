<% provide :title, t(".signup_title") %>

<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <h2 class="text-center"><%= t ".signup_header" %></h2>
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :sex, t(".sex") %>
      <%= f.select :sex, User.sexes.keys %>

      <%= f.label :phone, t(".phone") %>
      <%= f.text_field :phone, class: "form-control", placeholder: t(".phone_code") %>

      <%= f.label :address, t(".address") %>
      <%= f.text_field :address, class: "form-control",
        placeholder: t(".address_detail") %>

      <%= f.label :password, t(".password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <p><%= t ".if_have_account" %>, <%= link_to t(".login"), login_path %></p>
      <%= f.submit t(".create_account"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
