<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal">
        &times;</button>
      <h3 class="text-center font-weight-bold">
        List booking of <%= @user.name%>
      </h3>
      <div class="alert alert-danger" id="alert-danger-error">
        <ul class="errors "></ul>
      </div>
      <table class="table table-hover">
        <thead>
          <tr class="danger">
            <td>ID</td>
            <td>Name</td>
            <td>Num</td>
            <td>Total price</td>
            <td>Status</td>
            <td>Info</td>
            <td>action</td>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.id %></td>
              <td><%= booking.tour.tour_name %></td>
              <td>
                created: <%= booking.created_at %><br>
                updated: <%= booking.updated_at %>
              </td>
              <td><%= booking.total_price %></td>
              <%= form_for booking, url: book_path(booking), method: :patch do |f| %>
                <td><%= f.select :number_customer, 1..20, {}, class: "form-control" %></td>
                <td><%= f.select :status, Booking.statuses.keys, {}, class: "form-control" %></td>
                <td><%= f.submit class: "btn btn-success" do %>
                  <span class="glyphicon glyphicon-refresh"></span>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
