<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @user, url: {controller: "admins"}, remote: true do |f| %>
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal">
          &times;</button>
        <h3 class="text-center font-weight-bold">
          <%= yield(:action_title) %>
        </h3>
        <div class="alert alert-danger" id="alert-danger-error">
          <ul class="errors "></ul>
        </div>
        <%= f.label :name, t("users.form.name") %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :email, t("users.form.email") %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :sex, t("users.form.sex") %>
        <%= f.select :sex, User.sexes.keys %>

        <%= f.label :phone, t("users.form.phone") %>
        <%= f.text_field :phone, class: "form-control", placeholder: "+84" %>`

        <%= f.label :address, t("users.form.address") %>
        <%= f.text_field :address, class: "form-control" %>

        <%= f.label :password, t("users.form.password") %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation,
          t("users.form.password_confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>

        <div class="field">
            <%= f.check_box :admin, class: "remember_me" %>
            <span><%= f.label :admin %></span>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %><br>
        <%= link_to t("users.form.cancel"), "#", class: "btn",
          data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
