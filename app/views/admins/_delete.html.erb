<% provide :action_title, t(".action_title") %>
<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h4>
      <span class="glyphicon glyphicon-warning-sign"></span>
      <span class="glyphicon glyphicon-warning-sign"></span>
      <span class="glyphicon glyphicon-warning-sign"></span>
      Delete
    </h4>
  </div>
    <div class="modal-body">
      <ul class="errors"></ul>Comfirm delete<b>
        <%= @user.name %></b> have information?
      <table class="table">
        <thead>
          <tr class="danger">
            <td>Email</td>
            <td>Sex</td>
            <td>Phone</td>
            <td>Address</td>
            <td>Admin</td>
          </tr>
        </thead>
        <tbody>
          <tr class="warning">
            <td><%= @user.email %></td>
            <td><%= @user.sex %></td>
            <td><%= @user.phone %></td>
            <td><%= @user.address %></td>
            <td><%= @user.admin %></td>
          </tr>

        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <%= link_to t(".delete"), admin_path(@user), method: :delete,
        remote: true, class: "btn btn-danger" %>
      <%= link_to t(".cancel"), "#", class: "btn btn-default",
        data: {dismiss: "modal"} %>
    </div>
  </div>
</div>
