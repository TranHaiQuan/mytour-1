<% provide :action_title, t(".action_title") %>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">
      <ul class="errors"></ul><%= t ".confirm_delete" %><b>
        <%= @user.name %></b>?
    </div>
    <div class="modal-footer">
      <%= link_to t(".delete"), admin_path(@user), method: :delete,
        remote: true, class: "btn btn-danger" %>
      <%= link_to t(".cancel"), "#", class: "btn btn-default",
        data: {dismiss: "modal"} %>
    </div>
  </div>
</div>
