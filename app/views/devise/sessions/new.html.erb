<div class="container-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-user">
          <h2 class="text-center"><strong><%= t ".login" %></strong></h2>
          <%= form_for resource, as: resource_name,
            url: session_path(resource_name) do |f| %>
            <div class="field">
              <%= f.label :email, t("devise.registrations.form.email") %><br />
              <%= f.email_field :email, autofocus: true,
                autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password, t("devise.registrations.form.password") %>
              <br />
              <%= f.password_field :password, autocomplete: "off",
                class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class: "remember_me" %>
                <span><%= f.label :remember_me, t(".remember_me") %></span>
              </div>
            <% end %>

            <div class="actions">
              <p><%= t ".not_have_account" %>
              <%= link_to t("devise.registrations.form.signup"),
                new_user_registration_path %></p>
              <%= f.submit t(".login"), class: "btn btn-outlined btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
